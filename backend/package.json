{
  "name": "backend-skillswap",
  "version": "1.0.0",
  "description": "Backend for SkillSwap application",
  "keywords": [
    "plateforme d'échange de compétences"
  ],
  "type": "module",
  "scripts": {
    "dev": "tsx watch index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "======= Pour la BDD ========": "========================",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:seed": "node dist/src/models/seeding.js",
    "db:seed:dev": "tsx src/models/seeding.ts",
    "db:studio": "prisma studio",
    "======= Pour les tests ========": "========================",
    "test:unit": "node --test ./src/**/*.unit.test.ts",
    "test:unit:watch": "node --test --watch ./src/**/*.unit.test.ts",
    "test:spec": "node --test --env-file=./src/test/config/.env.test --import ./src/test/config/global-setup.ts --experimental-test-isolation=none ./src/**/*.spec.test.ts",
    "======= Pour indexer des users ========": "========================",
    "search:reindex": "tsx src/scripts/reindex-search.ts",
    "setup:meilisearch": "tsx src/scripts/reindex-search.ts",
    "======= Pour le clean code ========": "========================",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@types/cookie-parser": "^1.4.10",
    "argon2": "^0.44.0",
    "axios": "^1.13.2",
    "cookie": "^1.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "meilisearch": "^0.55.0",
    "multer": "^2.0.2",
    "socket.io": "^4.8.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/axios": "^0.9.36",
    "@types/cookie": "^0.6.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.3",
    "@types/socket.io": "^3.0.1",
    "@typescript-eslint/parser": "^8.53.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "prisma": "^7.2.0",
    "socket.io-client": "^4.8.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
